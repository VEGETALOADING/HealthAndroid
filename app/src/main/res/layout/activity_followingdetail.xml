<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="#3AF9AC"
        android:layout_height="220dp">
        <LinearLayout
            android:id="@+id/return_e"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_return">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="返回"
                android:textColor="@color/black"></TextView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_marginLeft="20dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/userinfo_rl"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/ic_launcher"></ImageView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/user_photo"
                android:text="DEFAULT"
                android:textColor="@color/black"
                android:textSize="25sp"></TextView>


        </RelativeLayout>


        <Button
            android:id="@+id/following_isFollow_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="13dp"
            android:text="已关注"
            android:background="@drawable/btn_grey"></Button>

        <LinearLayout
            android:id="@+id/three_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/userinfo_rl"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/activity_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="动态"
                    android:textColor="@color/btn_unselected"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/following_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/black"></TextView>

                <TextView
                    android:id="@+id/following_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="关注"
                    android:textColor="@color/btn_unselected"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/follower_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/follower_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="粉丝"
                    android:textColor="@color/btn_unselected"></TextView>
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/search_et"
            android:layout_width="250dp"
            android:height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/three_ll"
            android:hint="搜索TA的动态"></EditText>
        <Button
            android:id="@+id/searchactivity_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/search_et"
            android:layout_below="@+id/three_ll"
            android:text="搜索"
            android:background="@drawable/btn_green"></Button>
    </RelativeLayout>
</RelativeLayout>