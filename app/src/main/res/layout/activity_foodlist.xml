<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="@drawable/dim"
    tools:foreground=""
    android:id="@+id/whole_rl">
    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/return_l"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_return">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="返回"
                android:textColor="@color/black"></TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/addwhat_tv"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加饮食"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center"></TextView>

        <Button
            android:id="@+id/commitAddFood_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:text="完成"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/btn_green"
            android:layout_gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/top_ll">
        <EditText
            android:id="@+id/searchfood_et"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/tv_grey"
            android:hint="请输入食物名称"></EditText>

        <Button
            android:visibility="gone"
            android:id="@+id/cancelsearch_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/search_et"
            android:text="取消"
            android:textSize="18sp"
            android:background="@drawable/btn_green"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/search_ll"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/common_food"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="常见"
            android:gravity="center"></TextView>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/btn_unselected"></View>
        <TextView
            android:id="@+id/favorite_food"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="收藏"
            android:gravity="center"></TextView>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/btn_unselected"></View>
        <TextView
            android:id="@+id/diy_food"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="自定义"
            android:gravity="center"></TextView>
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:layout_below="@+id/category_ll"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/btn_unselected"></View>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view"
        android:layout_marginTop="4dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/foodRv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"></androidx.recyclerview.widget.RecyclerView>

    </ScrollView>
    <TextView
        android:visibility="gone"
        android:id="@+id/not_found_tv"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/line_view"
        android:text="抱歉，没有找到相关的选项"
        android:gravity="center"
        android:textColor="@color/nav_text_default"></TextView>
    <View
        android:visibility="gone"
        android:id="@+id/not_fount_line"
        android:layout_below="@+id/not_found_tv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/btn_unselected"></View>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/not_found_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/not_fount_line">
        <ImageView
            android:id="@+id/icon_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_edit"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp">
        </ImageView>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="搜索不到？添加自定义运动"
            android:textColor="@color/black">

        </TextView>

    </LinearLayout>


</RelativeLayout>