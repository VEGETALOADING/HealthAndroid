<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:id="@+id/top_ll"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/return_j"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_return">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="返回"
                android:textColor="@color/black"></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="健康档案"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"></TextView>



    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
            android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/record_userpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@mipmap/icon_progress_selected">
        </ImageView>
        <TextView
            android:id="@+id/record_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="15sp"
            android:textColor="@color/black"></TextView>
        <Button
            android:id="@+id/record_schema"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="健康方案"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="180dp"
            android:background="@drawable/btn_green"></Button>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/record_dietandsport_ll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/btn_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_fire"
                    android:layout_margin="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮食&amp;运动"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"></TextView>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="210dp"
                    ></ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还可以吃"
                    android:layout_marginTop="38dp"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:id="@+id/remanet_hot"
                    android:layout_toRightOf="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="5dp"
                    android:text="default"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_toRightOf="@id/remanet_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千卡"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp">
                </TextView>
                <ImageView
                    android:id="@+id/img_bar"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="11dp"
                    android:src="@mipmap/icon_bar"
                    android:layout_marginLeft="250dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_bar"
                    android:layout_marginLeft="270dp"
                    android:textSize="10sp"
                    android:text="早 午 晚 运动"></TextView>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/record_weight_ll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/btn_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_weight"
                    android:layout_margin="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"></TextView>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="265dp"
                    ></ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新体重:"
                    android:layout_marginTop="38dp"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:id="@+id/record_latestweight_tv"
                    android:layout_toRightOf="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="5dp"
                    android:text="default"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_toRightOf="@id/record_latestweight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公斤"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp">
                </TextView>
                <ImageView
                    android:id="@+id/img_curve"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/icon_curve"
                    android:layout_marginLeft="250dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_curve"
                    android:layout_marginLeft="275dp"
                    android:textSize="10sp"
                    android:text="早 午 晚 运动"></TextView>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/record_girth_ll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/btn_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_girth"
                    android:layout_margin="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="围度"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"></TextView>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="265dp"
                    ></ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新腰围:"
                    android:layout_marginTop="38dp"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:id="@+id/record_latestgirth_tv"
                    android:layout_toRightOf="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="5dp"
                    android:text="default"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_toRightOf="@id/record_latestgirth_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp">
                </TextView>
                <ImageView
                    android:id="@+id/img_curve2"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/icon_curve2"
                    android:layout_marginLeft="250dp"></ImageView>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/record_step_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/btn_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_foot"
                    android:layout_margin="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="步数"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"></TextView>
                <Button
                    android:id="@+id/step_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:background="@drawable/btn_greenframe"
                    android:text="请开启"
                    android:textColor="@color/green_light"></Button>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/record_habit_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/btn_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_habit"
                    android:layout_margin="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康习惯"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="已完成"
                    android:layout_marginLeft="138dp"></TextView>
                <TextView
                    android:id="@+id/habitprogress_tv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="100%"
                    android:textColor="@color/green">

                </TextView>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="5dp"
                    ></ImageView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/record_train_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/btn_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_dullbell"
                    android:layout_margin="10dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动训练"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/traintime_tv"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="#d4237a"></TextView>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="分钟">

                </TextView>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/right"
                    android:layout_marginLeft="5dp"
                    ></ImageView>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>
</ScrollView>