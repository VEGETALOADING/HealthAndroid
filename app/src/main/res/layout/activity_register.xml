<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:background="#ffffff"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/return_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_return"></ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="基本信息"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/progress_ll"
        android:layout_below="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/progress1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="4dp"
            android:background="@color/line_grey"></View>
        <View
            android:id="@+id/progress2"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="4dp"
            android:background="@color/line_grey"></View>
        <View
            android:id="@+id/progress3"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="4dp"
            android:background="@color/line_grey"></View>
        <View
            android:id="@+id/progress4"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="4dp"
            android:background="@color/line_grey"></View>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@id/progress_ll"
        android:layout_width="match_parent"
        android:layout_height="620dp"></RelativeLayout>


</RelativeLayout>
