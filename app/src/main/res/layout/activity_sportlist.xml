<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/return_f"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_return">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="返回"
                android:textColor="@color/black"></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="添加运动"
            android:textSize="20sp"
            android:paddingLeft="-50dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center"></TextView>
    </LinearLayout>
    <EditText
        android:id="@+id/search_et"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/top_ll"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:background="@drawable/tv_grey"
        android:hint="请输入运动名称"></EditText>

    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/top_ll"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/search_et"
        android:text="搜索"
        android:textSize="18sp"
        android:background="@drawable/btn_green"></Button>
    <LinearLayout
        android:id="@+id/commonandmy_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/search_et"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/common_sport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="常见"
            android:gravity="center"></TextView>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/btn_unselected"></View>
        <TextView
            android:id="@+id/my_sport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="我的"
            android:gravity="center"></TextView>
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:layout_below="@+id/commonandmy_ll"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/btn_unselected"></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sportRv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
        </androidx.recyclerview.widget.RecyclerView>

    </ScrollView>


</RelativeLayout>