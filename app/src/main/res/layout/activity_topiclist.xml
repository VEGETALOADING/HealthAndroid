<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/return_ll"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_return">
            </ImageView>

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="热门话题"
            android:textSize="20sp"
            android:paddingLeft="-50dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotAndMyTopic_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/top_ll"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hotTopic_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="精选话题"
            android:gravity="center"></TextView>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/btn_unselected"></View>
        <TextView
            android:id="@+id/myTopic_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="我的话题"
            android:gravity="center"></TextView>
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:layout_below="@+id/hotAndMyTopic_ll"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/btn_unselected"></View>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/followerRv_main"
        android:layout_below="@id/line_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4FFDD">

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/noData_tv"
        android:visibility="gone"
        android:layout_below="@id/line_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="抱歉，没有找到相关选项"></TextView>

</RelativeLayout>