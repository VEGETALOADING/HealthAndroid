<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:text="default"
            android:textSize="20sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/weightunit_tv"
            android:layout_toRightOf="@id/weight_tv"
            android:layout_marginLeft="3dp"
            android:text="公斤"
            android:gravity="bottom"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:id="@+id/weight_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_tv"
            android:text="初始体重"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"></TextView>

    </RelativeLayout>
    <TextView
        android:id="@+id/weight_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-01-23"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginLeft="100dp"></TextView>

</LinearLayout>