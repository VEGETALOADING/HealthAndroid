<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reset_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green_light"
            android:text="重置"
            android:layout_gravity="center_vertical"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="请选择日期"
            android:textSize="20sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/spv_ll"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="250dp">
        <com.tyut.view.ScrollPickView
            android:id="@+id/chooseyear_spv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="250dp"
            ></com.tyut.view.ScrollPickView>
        <View
            android:layout_width="1dp"
            android:layout_height="250dp"
            android:background="@color/nav_text_default"></View>
        <com.tyut.view.ScrollPickView
            android:id="@+id/choosemonth_spv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="250dp"
            ></com.tyut.view.ScrollPickView>
    </LinearLayout>

    <TextView
        android:id="@+id/choosedate_confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/green_light"
        android:text="确定"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#ffffff"></TextView>




</LinearLayout>