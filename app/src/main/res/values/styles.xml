<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--底部弹窗动画-->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--Dialog-->
    <style name="SportDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/green_light</item>
    </style>

    <!--自定义滑动日历弹框主题-->
    <style name="CalendarDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <declare-styleable name="MyCheckBox">
        <!-- 选中时圆的颜色 -->
        <attr name="mcb_check_circle_color" format="color" />
        <!-- 未选中时圆的颜色 -->
        <attr name="mcb_uncheck_circle_color" format="color" />
        <!-- 选中时的钩子的颜色 -->
        <attr name="mcb_check_hook_color" format="color" />
        <!-- 未选中时的钩子的颜色 -->
        <attr name="mcb_uncheck_hook_color" format="color" />
        <!-- 是否选中 -->
        <attr name="mcb_is_check" format="boolean" />
        <!-- 风格 -->
        <attr name="mcb_style" format="enum">
            <!-- 普通，对勾是有颜色的 -->
            <enum name="normal" value="1" />
            <!-- 镂空，就是对勾是透明的 -->
            <enum name="hollow_out" value="2" />
        </attr>
        <!-- 线宽 -->
        <attr name="mcb_line_width" format="float|dimension|reference" />
    </declare-styleable>

    <string-array name="titles">
        <item>Android</item>
        <item>IOS</item>
        <item>JAVA</item>
        <item>C++</item>
        <item>Ruby</item>
        <item>WEB</item>
        <item>HTML</item>
        <item>PERL</item>
        <item>C</item>
        <item>SWIFT</item>
        <item>Python</item>
        <item>C</item>
        <item>C#</item>
        <item>JS</item>
    </string-array>

    <string-array name="items">
        <item>Normal List</item>
        <item>Normal Grid</item>
        <item>Normal Staggered</item>
        <item>Multiple List</item>
        <item>Multiple Grid</item>
        <item>Header Bottom List</item>
        <item>Header Bottom Grid</item>
        <item>Anim List</item>
        <item>Anim Grid</item>
        <item>Expended List</item>
        <item>Expended Grid</item>
        <item>Single Select</item>
        <item>Multiple Select</item>
    </string-array>

    <style name="weekIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>




</resources>

